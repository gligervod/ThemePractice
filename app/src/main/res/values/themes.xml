<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.N" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <item name="android:colorAccent">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/primaryFontSize</item>
        <item name="editTextStyle">@style/text</item>
        <item name="android:buttonStyle">@style/buttone</item>
    </style>
    <style name="text" parent="android:style/Widget.TextView">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:padding">@dimen/listPadding</item>
    </style>
    <style name="buttone">
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:layout_height">@dimen/buttoneHeight</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>